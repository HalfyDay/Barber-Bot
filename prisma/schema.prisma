datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  id                  String    @id
  TelegramID           Float?    @map("TelegramID")
  Name                 String?    @map("Name")
  Phone                String?    @map("Phone")
  LastNameChanged      String?    @map("LastNameChanged")
  Barber               String?    @map("Barber")

  @@map("Users")
}
model Appointments {
  id                  String    @id
  CustomerName         String?    @map("CustomerName")
  Phone                String?    @map("Phone")
  Barber               String?    @map("Barber")
  Date                 String?    @map("Date")
  Time                 String?    @map("Time")
  Status               String?    @map("Status")
  Services             String?    @map("Services")
  Reminder2hClientSent Boolean?    @map("Reminder2hClientSent")
  Reminder2hBarberSent Boolean?    @map("Reminder2hBarberSent")
  UserID               String?    @map("UserID")

  @@map("Appointments")
}
model Schedules {
  id                  String    @id
  Barber               String?    @map("Barber")
  DayOfWeek            String?    @map("DayOfWeek")
  Today                Boolean?    @map("Today")
  Date                 String?    @map("Date")
  Week                 String?    @map("Week")
  Time                 String?    @map("Time")

  @@map("Schedules")
}
model Cost {
  id          String  @id
  Uslugi      String? @map("Услуги")
  Timur       Float?  @map("Тимур")
  Vladimir    Float?  @map("Владимир")
  Alina       Float?  @map("Алина")
  Aleksey     Float?  @map("Алексей")
  Dlitelnost  String? @map("Длительность")

  @@map("Cost")
}
model Barbers {
  id          String   @id
  name        String
  nickname    String?
  description String?
  rating      String?
  avatarUrl   String?
  color       String?
  phone       String?
  telegramId  String?
  login       String?
  password    String?
  isActive    Boolean  @default(true)
  orderIndex  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  services ServicePrices[]
}

model Services {
  id          String   @id
  name        String
  description String?
  category    String?
  duration    Int      @default(0)
  isActive    Boolean  @default(true)
  orderIndex  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  prices ServicePrices[]
}

model ServicePrices {
  id        String   @id
  serviceId String
  barberId  String
  price     Float    @default(0)
  createdAt DateTime @default(now())

  service Services @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  barber  Barbers  @relation(fields: [barberId], references: [id], onDelete: Cascade)

  @@unique([serviceId, barberId])
}

model BotSettings {
  id             String   @id
  botDescription String   @default("")
  aboutText      String   @default("")
  isBotEnabled   Boolean  @default(true)
  bookingLimit   Int      @default(2)
  minLeadHours   Int      @default(2)
  maxDaysAhead   Int      @default(14)
  lastSyncSource String   @default("site")
  updatedAt      DateTime @updatedAt
}

model BotMessages {
  id        String   @id
  code      String   @unique
  title     String?
  text      String
  updatedAt DateTime @updatedAt
}
