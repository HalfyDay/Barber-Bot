model Barbers {
  id          String   @id
  name        String
  nickname    String?
  description String?
  rating      String?
  avatarUrl   String?
  color       String?
  phone       String?
  telegramId  String?
  isActive    Boolean  @default(true)
  orderIndex  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  services ServicePrices[]
}

model Services {
  id          String   @id
  name        String
  description String?
  category    String?
  duration    Int      @default(0)
  isActive    Boolean  @default(true)
  orderIndex  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  prices ServicePrices[]
}

model ServicePrices {
  id        String   @id
  serviceId String
  barberId  String
  price     Float    @default(0)
  createdAt DateTime @default(now())

  service Services @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  barber  Barbers  @relation(fields: [barberId], references: [id], onDelete: Cascade)

  @@unique([serviceId, barberId])
}

model BotSettings {
  id             String   @id
  botDescription String   @default("")
  aboutText      String   @default("")
  isBotEnabled   Boolean  @default(true)
  bookingLimit   Int      @default(2)
  minLeadHours   Int      @default(2)
  maxDaysAhead   Int      @default(14)
  lastSyncSource String   @default("site")
  updatedAt      DateTime @updatedAt
}

model BotMessages {
  id        String   @id
  code      String   @unique
  title     String?
  text      String
  updatedAt DateTime @updatedAt
}
